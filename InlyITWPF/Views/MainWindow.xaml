<Window x:Class="InlyITWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InlyITWPF"
        xmlns:vm="clr-namespace:InlyITWPF.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>

        <ContentControl Content="{Binding SelectedViewModel}"/>

        <ListView Grid.Column="0" ItemsSource="{Binding Valutes}"
                 SelectedItem="{Binding SelectedValutes}" Margin="0,0,10,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock FontSize="18">
                            <Run Text="Валюта: " />
                            <Run Text="{Binding Path=Name}" />
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Стоимость руб.: " />
                            <Run Text="{Binding Path=Value}" />
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Номинал: " />
                            <Run Text="{Binding Path=Nominal}" />
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Column="1" DataContext="{Binding SelectedValutes}" Visibility="Visible">
            <TextBlock Text="Выбранный элемент" Margin="10,10,10,0" />
            <TextBlock Text="Наименование Валюты:" Margin="10,0,10,0"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,10,10" />
            <TextBlock Text="Стоимость руб.:" Margin="10,0,10,0"/>
            <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,10,10"/>
            <TextBlock Text="Номинал:" Margin="10,0,10,0"/>
            <TextBox Text="{Binding Nominal, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,10,10"/>

            <TextBlock  Margin="10,0,10,10">
                <Run Text="Предыдущая цена: "/>
                <Run Text="{Binding Path=Previous}" />
            </TextBlock>


            <!--<TextBlock Text="{Binding Previous, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,10,0"/>
           

        public string ID { get; set; }
        public string NumCode { get; set; }
        public string CharCode { get; set; }
        public int Nominal { get; set; }
        public string Name { get; set; }
        public double Value { get; set; }
        public string Previous { get; set; } -->
        </StackPanel>
        <Button Content="Добавить Валюту" Command="{Binding OpenAddValuteWnd}" Height="30" Width="100" Grid.Column="1" Margin="10,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        <Button Grid.Column="1" Content="Удалить" Width="70"  Height="30" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
    </Grid>
</Window>
